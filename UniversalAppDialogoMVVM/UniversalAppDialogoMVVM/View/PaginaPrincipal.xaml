    xmlns:local="using:UniversalAppDialogoMVVM.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button Content="Button" Margin="0,227,0,0"  VerticalAlignment="Top" Height="115" Width="260" Command="{Binding ComandoBoton}" HorizontalAlignment="Center"/>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Resultado, Mode=TwoWay}" VerticalAlignment="Center" Height="104" Width="636"/>


    </Grid>
</Page>
